<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

{{!-- Create a table --}}
<h2 class="browse">Browse Players have Equipments</h2>
<table border="3" cellpadding="20" id="playersHaveEquipments-table">

    {{!-- Header section --}}
    <thead>
        <tr>
            <th>Player ID</th>
            <th>Player Name</th> <!-- Added -->
            <th>Equipment ID</th>
            <th>Equipment Type</th> <!-- Added -->
            <th></th>
        </tr>
    </thead>

    {{!-- Body section --}}
<tbody>
    {{#each data}}
    <tr data-value={{this.id}}>
        <td>{{this.playerID}}</td>
        <td>{{this.playerName}}</td>
        <td>{{this.equipmentID}}</td>
        <td>{{this.equipmentType}}</td>
        <td><button onclick="deletePlayersHaveEquipments({{this.playerID}},{{this.equipmentID}})">Delete</button></td>
    </tr>
    {{/each}}
</tbody>
</table>
<script src="./js/delete_playersHaveEquipments.js"></script>
<div class="button-gallery">
<div id="Buttons">
    <form id="add-playersHaveEquipments-form-ajax">
        <legend>Add Equipment to Player</legend>
        <fieldset>
            <label for="input-playersHaveEquipments-playerID">Player Name: *</label>
            <input type="text" placeholder="Player Name" name="input-playersHaveEquipments-playerID" id="input-playersHaveEquipments-playerID" required>
            
            <label for="input-playersHaveEquipments-equipmentID">Equipment Type: *</label>
            <input type="text" placeholder="Equipment Type" name="input-playersHaveEquipments-equipmentID" id="input-playersHaveEquipments-equipmentID" required>

        </fieldset>
        <input type="submit" value="Add Equipment to Player">
        <input type="reset" value="Reset Form">
    </form>
</div>
<script src="./js/add_playersHaveEquipments.js"></script>

<div class="button-gallery">

    <div id="Buttons">
    <form id="search-players-equipments-html" method='GET' action='/playersHaveEquipments'>
        <legend>Search by Player/Equipment Name: </legend>
        <input type="text" placeholder="Equipment Type" name="type" id="input-players-equipments-search">
        <input type="text" placeholder="Player Name" name="playerName" id="input-players-equipments-search">
        <input type = "submit">
        <a href="/playersHaveEquipments"><button>Reset Page</button></a>
    </form>
</div>
</div>